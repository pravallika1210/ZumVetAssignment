<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Welcome to ZumVet</title>
</head>

<body>

    <div class="container">
        <% if(message.length> 0) { %>
            <div class="alert alert-success">
                <%= message %>
            </div>
            <% } %>
                <h1 class="mt-5 mb-5 text-center text-primary"><b>Welcome to ZumVet</b></h1>

                <div class="row mt-5">
                    <div class="col-md-3">&nbsp;</div>
                    <div class="col-md-6">
                        <% if(session.user_email) { %>
                            <%if(session.user_subscription){%>
                                <p><b>Hey <%= session.user_name%>, here are your subscription details</b></p>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">
                                                <%= 1 %>
                                            </th>
                                            <td>
                                                <%= session.user_subscription%>
                                            </td>
                                            <td>
                                                <form method="post" action="/subscriptions/cancel">
                                                    <input type="email" name="email" value="<%= session.user_email%>"
                                                        style="display:none">
                                                    <input type="name" name="name" value="<%= session.user_name%>"
                                                        style="display:none">
                                                    <input type="subscription" name="subscription"
                                                        value="<%= session.user_subscription%>" style="display:none">
                                                    <input type="submit" value="Cancel subscription"
                                                        class="btn btn-primary">
                                                </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <a href="/logout" class="btn btn-primary">Logout</a>
                                <% } else { %>
                                    <p>Hey <%= session.user_name%>, <p>With <b>ZumVet subscription</b> you can receive
                                                exciting <b>special privileges</b> and <b>discounts</b>.</p>
                                            <p>Feel free to get one today!</p>
                                    </p>
                                    <a href="/subscriptions/listAll" class="btn btn-primary">Buy subscription</a>
                                    <a href="/logout" class="btn btn-primary">Logout</a>
                                    <% } %>
                                        <% } else { %>

                                            <div class="card">
                                                <div class="card-header">Login</div>
                                                <div class="card-body">
                                                    <form method="post" action="/login">
                                                        <div class="mb-3">
                                                            <label>Email Address</label>
                                                            <input type="email" name="user_email_address"
                                                                class="form-control" />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>Password</label>
                                                            <input type="password" name="user_password"
                                                                class="form-control" />
                                                        </div>
                                                        <div class="mb-3">
                                                            <input type="submit" class="btn btn-primary"
                                                                value="Login" />
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>

                                            <% } %>
                    </div>
                </div>
    </div>
</body>

</html>
